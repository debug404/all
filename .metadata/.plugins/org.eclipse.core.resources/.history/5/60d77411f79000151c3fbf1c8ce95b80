				<c:choose>
				<c:when test="${fn:length(s)==4}"> <c:set var="name" value="${name}${fn:substring(s, 2,4)}"></c:set></c:when>
				<c:when test="${fn:length(s)==1}"><c:set var="name" value="${name}0${s}"></c:set></c:when>
				<c:when test="${fn:length(s)==2}"><c:set var="name" value="${name}${s}"></c:set></c:when>
				
				
				
				</c:choose>				
				${fn:length(name)}
				
				
				</c:forTokens></td>

