<script type="text/javascript">
	$(function() {
		$(window).load(function() {
			var begin = "D:\\"

			$.ajax({
				url : "getFiles.jsp?path=" + begin,
				cache : false,
				success : function(html) {
					$(".tabs").children().remove();
					$(".tabs").append(html);
				}
			});
		});

		$('#tt').tree({
			method : 'get',
			url : 'getJsons.do',
			onSelect : function(node) {

				var a = node.address;
				var str = a.replace(/\\/g, "\\\\");
				$.ajax({
					url : "getFiles.jsp?path=" + str,
					cache : false,
					success : function(html) {
						$(".tabs").children().remove();
						$(".tabs").append(html);
					}
				});

			},
			onLoadSuccess : function(node, data) {
				$('.tree-title').css({
					'font-size' : '20px'
				});
				$('.tree-node').css({
					'height' : '25px'
				});
				$('.tree-file').css({
					'background' : 'url("img/load.png") no-repeat'
				});
			}
		});

		$(".text").hide();

		var srcs = [];
		var src;
		$("tbody").delegate(".open", "click", function() {
			$(".text").show();
			$(".thisLoc").html($(this).html());
			//var a = window.location.hash;
			var a = $(this).prop("id");
			var str = a.replace(/\\/g, "\\\\");
			src = $(".open").eq(1).attr("tag");
			srcs[srcs.length] = src;

			//$(".tables").load("getFiles.jsp?path=" + str);
			$.ajax({
				url : "getFiles.jsp?path=" + str,
				cache : false,
				success : function(html) {
					$(".tabs").children().remove();
					$(".tabs").append(html);
				}
			});

		});

		$(".back").click(
				function() {

					var len = srcs.length;

					$(".thisLoc").html(
							srcs[len - 1].substring(4, srcs[len - 1].length));
					$.ajax({
						url : "getFiles.jsp?path=" + srcs[len - 1],
						cache : false,
						success : function(html) {
							$(".tabs").children().remove();
							$(".tabs").append(html);
						}
					});
					srcs.length = len - 1;

				});

		$(".backIndex").click(function() {
			srcs.length = 0;
			$.ajax({
				url : "getFiles.jsp?path=" + "D:\\",
				cache : false,
				success : function(html) {
					$(".tabs").children().remove();
					$(".tabs").append(html);
				}
			});

		});

	});

	function getAjax() {

		$.ajax({
			url : "getFiles.jsp?path=" + "D:\\",
			cache : false,
			success : function(html) {
				$(".tabs").children().remove();
				$(".tabs").append(html);
			}
		});

	}
</script>
